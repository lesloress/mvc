@{
    ViewBag.Title = "Home Page";
}

@section content {
    <div class="container-fluid p-0">

        @foreach (var article in ViewBag.Articles)
        {
            <br />
            <div class="row d-flex align-items-center">
                <div class="col-12">
                    <div class="card mb-4">
                        @*<img class="card-img-top w-50 m-auto" src="~/Content/images/plans.jpg" />*@
                        <div class="card-body">
                            <h3>@article[0]</h3>
                            <p class="card-text">@article[1]</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn">Подробнее</button>
                                <small class="text-muted">@article[2]</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="btn-group mb-2">
            @if (ViewBag.Page > 0)
            {
                <a href="@Url.Action("Index", new { page = ViewBag.Page - 1 })"
                   class="btn btn-sm btn-outline-secondary">
                    &laquo; Предыдущая
                </a>
            }
            @if (ViewBag.Page < ViewBag.MaxPage)
            {
                <a href="@Url.Action("Index", new { page = ViewBag.Page + 1 })"
                   class="btn btn-sm btn-outline-secondary">
                    Следующая &raquo;
                </a>
            }
        </div>

    </div>

}